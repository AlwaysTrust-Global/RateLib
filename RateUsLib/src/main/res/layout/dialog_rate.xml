<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@drawable/bg_dialog_rate"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.MaterialComponents.Light.NoActionBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:animateLayoutChanges="true"
    android:padding="16dp">
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/do_you_like_our_app"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/black"
        android:textStyle="bold"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginTop="8dp"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/give_us_a_quick_rating_so_we_know_if_you_like_it"/>

    <com.iarcuschin.simpleratingbar.SimpleRatingBar
        android:id="@+id/rating"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        app:srb_starSize="40dp"
        app:srb_numberOfStars="5"
        app:srb_rating="0"
        app:srb_stepSize="1"
        app:srb_isIndicator="false"
        app:srb_starCornerRadius="3"
        app:srb_starsSeparation="16dp"
        android:layout_marginTop="6dp"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/edtFeedBack"
        android:background="@drawable/bg_edt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:gravity="top|start"
        android:lines="6"
        android:visibility="gone"
        android:maxLines="8"
        android:textSize="14dp"
        android:hint="@string/please_leave_a_feedback_to_help_us_improve_product"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSubmit"
        android:text="@string/maybe_later"
        app:cornerRadius="6dp"
        android:shadowRadius="6"
        app:backgroundTint="#EEEEEE"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="12dp"
        android:layout_width="wrap_content"
        android:textAllCaps="false"
        android:textColor="#757575"
        android:layout_height="wrap_content"/>
</LinearLayout>